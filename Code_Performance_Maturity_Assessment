    <!-- Patch layer: fills teaserStageDesc / teaserStatText / teaserStatSource after Nathanâ€™s showGate() -->
    <script>
      window.addEventListener("DOMContentLoaded", () => {
        const originalShowGate = window.showGate;
        if (typeof originalShowGate !== "function") return;

        window.showGate = function (...args) {
          const ret = originalShowGate.apply(this, args);

          try {
            if (typeof window.computeScores === "function") {
              const { stage } = window.computeScores();

              const setText = (id, value) => {
                const el = document.getElementById(id);
                if (el) el.textContent = value || "";
              };

              setText("teaserStageDesc", stage && stage.desc);
              setText("teaserStatText", stage && stage.stat);
              setText("teaserStatSource", stage && stage.statSource);

              const callout = document.getElementById("teaserStatCallout");
              if (callout) callout.style.display = stage && stage.stat ? "" : "none";
            }
          } catch (e) {
            // Silent fail: never block gating
          }

          return ret;
        };
      });
    </script>
